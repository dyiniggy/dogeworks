extends layout

block body
  div.container
    div.row
      div.col-md-4 col-md-4
      div.col-md-8 col-md-8
    div.row new row div
      div.col-md-2 col-md-2
      div.col-md-4 col-md-4
    div.row
      div(ng-controller='AppCtrl')
        h2 Hello {{name}}
        ul.menu
          li
            a(href='view1') view1
          li
            a(href='view2') view2

        div(ng-view)

        div
          | Angular Socket.io seed app: v
          span(app-version)
    div.row
      div(class='col-md-6 col-md-offset-3')
        div(ng-controller='CommandLineCtrl')
          input(type='text', class='form-control', ng-model='command_line')
          button(type='button', class='btn btn-primary btn-md', ng-click='execute()') execute
          p {{interaction_text}}
          {{command_line}}



  script(src='/socket.io/socket.io.js')
  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='bower_components/angular-socket-io/socket.js')
  script(src='bower_components/jquery/dist/jquery.js')
  script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
